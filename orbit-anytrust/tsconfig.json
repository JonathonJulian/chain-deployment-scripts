{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "paths": {
      "*": ["../node_modules/*"]
    }
  },
  "include": ["src/**/*.ts", "./hardhat.config.ts"],
  "exclude": ["node_modules", "src/typechain-types/**/*"]
}